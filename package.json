{
  "name": "scxml",
  "version": "3.3.1",
  "description": "An implementation of SCXML in JavaScript.",
  "keywords": [
    "scxml",
    "statecharts",
    "w3c",
    "javascript"
  ],
  "types": "tsd/index.d.ts",
  "maintainers": [
    {
      "name": "Jacob Beard",
      "email": "jbeard4@cs.mcgill.ca",
      "url": "http://echo-flow.com"
    }
  ],
  "bugs": {
    "email": "jbeard4@cs.mcgill.ca",
    "url": "https://github.com/jbeard4/SCION/issues"
  },
  "licenses": [
    {
      "type": "Apache-2.0",
      "url": "https://github.com/jbeard4/SCION/blob/master/LICENSE.txt"
    }
  ],
  "repository": {
    "type": "git",
    "url": "https://github.com/jbeard4/SCION.git"
  },
  "implements": [
    "http://www.w3.org/TR/scxml/"
  ],
  "dependencies": {
    "esprima": "2.7.2",
    "jsdom": "^11.1.0",
